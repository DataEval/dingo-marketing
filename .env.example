# Dingo Marketing AI Agent 系统环境配置

# 基础配置
DEBUG=true
HOST=0.0.0.0
PORT=8080

# 数据库配置
DATABASE_URL=dingo_marketing.json

# AI 服务配置 - 使用 OpenAI 兼容格式
# 支持多种AI提供商，只需修改对应的配置即可：

# DeepSeek 配置示例
OPENAI_API_KEY=sk-your-deepseek-api-key-here
OPENAI_MODEL_NAME=deepseek-chat
OPENAI_BASE_URL=https://api.deepseek.com/v1

# Qwen 配置示例（注释掉上面的配置，启用下面的配置）
# OPENAI_API_KEY=sk-your-qwen-api-key-here
# OPENAI_MODEL_NAME=qwen-turbo
# OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# OpenAI 配置示例（注释掉上面的配置，启用下面的配置）
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL_NAME=gpt-4
# OPENAI_BASE_URL=https://api.openai.com/v1

# 通用AI参数
MAX_TOKENS=4000
TEMPERATURE=0.7

# Web搜索和抓取配置
SERPER_API_KEY=your_serper_api_key_here
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3

# GitHub 配置
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=DataEval/dingo

# 社交媒体 API 配置
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
LINKEDIN_API_KEY=your_linkedin_api_key

# CORS 配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 日志配置
LOG_LEVEL=INFO

# 任务调度配置
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 推广配置
CAMPAIGN_MAX_DAILY_POSTS=10
CAMPAIGN_MIN_INTERVAL_MINUTES=60

# 用户画像配置
USER_PROFILING_ENABLED=true
USER_PROFILING_CACHE_TTL=3600
