# Dingo Marketing 环境配置文件
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 基础配置
# =============================================================================

# 调试模式 (true/false)
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# =============================================================================
# AI 服务配置
# =============================================================================

# OpenAI API 密钥 (必需)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI 模型配置
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# GitHub 集成配置
# =============================================================================

# GitHub 个人访问令牌 (必需)
GITHUB_TOKEN=your_github_token_here

# 目标仓库 (格式: owner/repo)
GITHUB_REPOSITORY=owner/repo

# GitHub API 配置
GITHUB_API_BASE_URL=https://api.github.com

# =============================================================================
# 应用配置
# =============================================================================

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# 缓存过期时间 (秒) - 使用内存缓存
CACHE_TTL=3600

# 每日发帖限制
DAILY_POST_LIMIT=5

# 发帖间隔 (小时)
POST_INTERVAL_HOURS=4

# =============================================================================
# 数据库配置
# =============================================================================

# 数据库 URL (SQLite)
DATABASE_URL=sqlite:///./data/dingo.db

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# 安全配置
# =============================================================================

# JWT 密钥 (生产环境请使用强密钥)
SECRET_KEY=your-secret-key-here

# JWT 过期时间 (小时)
ACCESS_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# 外部服务配置 (可选)
# =============================================================================

# Webhook 配置
# WEBHOOK_SECRET=your-webhook-secret

# 邮件服务配置 (如果需要通知)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# 开发配置
# =============================================================================

# 测试模式
TESTING=false

# 性能分析
PROFILING=false

# API 文档配置
DOCS_URL=/docs
REDOC_URL=/redoc 